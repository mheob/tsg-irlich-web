{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["web#typegen", "studio#extract-types", "^build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"extract-types": {},
		"lint": {},
		"studio#build": {
			"dependsOn": ["^build"],
			"env": [
				"SANITY_API_DATASET",
				"SANITY_API_PROJECT_ID",
				"SANITY_API_WRITE_TOKEN",
				"SANITY_STUDIO_DATASET",
				"SANITY_STUDIO_PROJECT_ID"
			],
			"outputs": ["dist/**"]
		},
		"typegen": {
			"dependsOn": ["studio#extract-types"]
		},
		"web#build": {
			"dependsOn": ["^build"]
		}
	}
}

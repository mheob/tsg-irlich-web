{
	"name": "@tsg-irlich-web/root",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"build:affected": "turbo build --affected",
		"cspell": "cspell .",
		"dev": "turbo dev",
		"extract-types": "turbo extract-types",
		"lint": "turbo lint",
		"lint:affected": "turbo lint --affected",
		"lint:cspell": "cspell --unique --no-progress --no-must-find-files",
		"lint:root": "eslint . --fix",
		"prepare": "husky",
		"typegen": "turbo typegen"
	},
	"lint-staged": {
		"*": [
			"eslint --fix",
			"pnpm run lint:cspell"
		]
	},
	"devDependencies": {
		"@antfu/ni": "catalog:",
		"@commitlint/cli": "catalog:",
		"@cspell/dict-de-de": "catalog:",
		"@eslint-react/eslint-plugin": "catalog:",
		"@mheob/commitlint-config": "catalog:",
		"@mheob/eslint-config": "catalog:",
		"@mheob/prettier-config": "catalog:",
		"@next/eslint-plugin-next": "catalog:",
		"commitizen": "catalog:",
		"cspell": "catalog:",
		"cz-git": "catalog:",
		"eslint": "catalog:",
		"eslint-plugin-react-hooks": "catalog:",
		"eslint-plugin-react-refresh": "catalog:",
		"husky": "catalog:",
		"lint-staged": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-tailwindcss": "catalog:",
		"taze": "catalog:",
		"turbo": "catalog:",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@10.18.3",
	"engines": {
		"node": "^22.20.0"
	},
	"pnpm": {
		"overrides": {
			"prismjs": ">=1.30.0",
			"tar-fs": "^2.1.3",
			"undici": ">=7.10.0"
		}
	}
}

{
	"name": "@tsgi-web/root",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"build:affected": "turbo build --affected",
		"cspell": "cspell .",
		"dev": "turbo dev",
		"dev:email": "turbo dev:email",
		"extract-types": "turbo extract-types",
		"lint": "turbo lint",
		"lint:affected": "turbo lint --affected",
		"lint:cspell": "cspell --unique --no-progress --no-must-find-files",
		"lint:root": "bun --bun eslint . --fix",
		"prepare": "husky",
		"typecheck": "turbo typecheck",
		"typegen:routes": "turbo typegen:routes",
		"typegen:sanity": "turbo typegen:sanity",
		"update": "taze"
	},
	"lint-staged": {
		"*": [
			"eslint --fix",
			"nr lint:cspell"
		]
	},
	"devDependencies": {
		"@antfu/ni": "^28.0.0",
		"@commitlint/cli": "^20.2.0",
		"@cspell/dict-de-de": "^4.1.2",
		"@eslint-react/eslint-plugin": "^2.3.13",
		"@mheob/commitlint-config": "^1.2.5",
		"@mheob/eslint-config": "^9.1.0",
		"@mheob/prettier-config": "^3.5.0",
		"@next/eslint-plugin-next": "^16.0.10",
		"@types/bun": "^1.3.4",
		"commitizen": "^4.3.1",
		"cspell": "^9.4.0",
		"cz-git": "^1.12.0",
		"eslint": "^9.39.2",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.26",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"taze": "^19.9.2",
		"turbo": "^2.6.3",
		"typescript": "^5.9.3"
	},
	"packageManager": "bun@1.3.5",
	"engines": {
		"bun": "1.3.4",
		"node": "^24.12.0"
	},
	"overrides": {
		"glob": "^10.5.0 || >=11.1.0",
		"prismjs": ">=1.30.0",
		"tar-fs": "^2.1.3",
		"undici": ">=7.10.0"
	}
}

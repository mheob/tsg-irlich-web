{
	"name": "@tsgi-web/root",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"build:affected": "turbo build --affected",
		"cspell": "cspell .",
		"dev": "turbo dev",
		"dev:email": "turbo dev:email",
		"extract-types": "turbo extract-types",
		"format": "turbo format",
		"lint": "turbo lint",
		"lint:affected": "turbo lint --affected",
		"lint:cspell": "cspell --unique --no-progress --no-must-find-files",
		"lint:root": "bun --bun biome lint --write",
		"prepare": "husky",
		"typecheck": "turbo typecheck",
		"typegen:routes": "turbo typegen:routes",
		"typegen:sanity": "turbo typegen:sanity"
	},
	"lint-staged": {
		"*": [
			"biome format --write",
			"biome lint --write"
		]
	},
	"devDependencies": {
		"@antfu/ni": "28.2.0",
		"@biomejs/biome": "2.3.15",
		"@commitlint/cli": "20.4.1",
		"@cspell/dict-de-de": "4.1.2",
		"@mheob/commitlint-config": "1.2.5",
		"@types/bun": "1.3.9",
		"commitizen": "4.3.1",
		"cspell": "9.6.4",
		"cz-git": "1.12.0",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"turbo": "2.8.8",
		"typescript": "5.9.3"
	},
	"packageManager": "bun@1.3.9",
	"engines": {
		"bun": "1.3.5",
		"node": "^24.12.0"
	},
	"overrides": {
		"glob": "^10.5.0 || >=11.1.0",
		"prismjs": ">=1.30.0",
		"tar-fs": "^2.1.3",
		"undici": ">=7.10.0"
	}
}

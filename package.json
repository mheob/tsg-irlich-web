{
	"name": "@tsg-irlich-web/root",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"build:affected": "turbo build --affected",
		"cspell": "cspell .",
		"dev": "turbo dev",
		"extract-types": "turbo extract-types",
		"lint": "turbo lint",
		"lint:affected": "turbo lint --affected",
		"lint:cspell": "cspell --unique --no-progress --no-must-find-files",
		"lint:root": "eslint . --fix",
		"prepare": "husky",
		"typegen": "turbo typegen"
	},
	"lint-staged": {
		"*": [
			"eslint --fix",
			"pnpm run lint:cspell"
		]
	},
	"devDependencies": {
		"@antfu/ni": "^24.2.0",
		"@commitlint/cli": "^19.8.0",
		"@cspell/dict-de-de": "^4.0.3",
		"@eslint-react/eslint-plugin": "^1.36.1",
		"@mheob/commitlint-config": "^1.2.1",
		"@mheob/eslint-config": "^8.3.0",
		"@mheob/prettier-config": "^3.3.3",
		"@next/eslint-plugin-next": "^15.2.3",
		"commitizen": "^4.3.1",
		"cspell": "^8.17.5",
		"cz-git": "^1.11.1",
		"eslint": "catalog:",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"turbo": "^2.4.4",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@10.6.4",
	"engines": {
		"node": "22.14.0"
	},
	"pnpm": {
		"overrides": {
			"cross-spawn": ">=7.0.5",
			"undici": ">=7.2.3",
			"vite": ">=6.0.0"
		}
	}
}

{
	"name": "@tsg-irlich-web/root",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"build:affected": "turbo build --affected",
		"cspell": "cspell .",
		"dev": "turbo dev",
		"extract-types": "turbo extract-types",
		"lint": "turbo lint",
		"lint:affected": "turbo lint --affected",
		"lint:cspell": "cspell --unique --no-progress --no-must-find-files",
		"lint:root": "eslint . --fix",
		"prepare": "husky",
		"typegen": "turbo typegen"
	},
	"lint-staged": {
		"*": [
			"eslint --fix",
			"pnpm run lint:cspell"
		]
	},
	"devDependencies": {
		"@antfu/ni": "^25.0.0",
		"@commitlint/cli": "^19.8.1",
		"@cspell/dict-de-de": "^4.1.0",
		"@eslint-react/eslint-plugin": "^1.50.0",
		"@mheob/commitlint-config": "^1.2.2",
		"@mheob/eslint-config": "^8.8.3",
		"@mheob/prettier-config": "^3.3.3",
		"@next/eslint-plugin-next": "^15.3.3",
		"commitizen": "^4.3.1",
		"cspell": "^9.0.2",
		"cz-git": "^1.11.1",
		"eslint": "catalog:",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"turbo": "^2.5.4",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@10.11.1",
	"engines": {
		"node": "22.16.0"
	},
	"pnpm": {
		"overrides": {
			"prismjs": ">=1.30.0",
			"undici": ">=7.10.0"
		}
	}
}

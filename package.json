{
	"name": "@tsg-irlich-web/root",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"build:affected": "turbo build --affected",
		"cspell": "cspell .",
		"dev": "turbo dev",
		"lint": "eslint . --fix && turbo lint",
		"lint:affected": "turbo lint --affected",
		"lint:cspell": "cspell --unique --no-progress --no-must-find-files",
		"prepare": "husky"
	},
	"lint-staged": {
		"*": "eslint --fix",
		"!*.{svg}": "pnpm run lint:cspell"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@cspell/dict-de-de": "^4.0.0",
		"@mheob/commitlint-config": "^1.1.2",
		"@mheob/eslint-config": "^6.1.3",
		"@mheob/prettier-config": "^3.3.1",
		"@mheob/tsconfig": "^2.2.1",
		"commitizen": "^4.3.1",
		"cspell": "^8.14.4",
		"cz-git": "^1.10.0",
		"eslint": "^9.11.1",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"turbo": "^2.1.2",
		"typescript": "^5.6.2"
	},
	"packageManager": "pnpm@9.11.0+sha512.0a203ffaed5a3f63242cd064c8fb5892366c103e328079318f78062f24ea8c9d50bc6a47aa3567cabefd824d170e78fa2745ed1f16b132e16436146b7688f19b",
	"engines": {
		"node": "^20.17.0"
	}
}

{
	"name": "@tsg-irlich-web/root",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"build:affected": "turbo build --affected",
		"cspell": "cspell .",
		"dev": "turbo dev",
		"lint": "eslint . --fix && turbo lint",
		"lint:affected": "turbo lint --affected",
		"lint:cspell": "cspell --unique --no-progress --no-must-find-files",
		"prepare": "husky"
	},
	"lint-staged": {
		"*": "eslint --fix",
		"!*.{svg}": "pnpm run lint:cspell"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@cspell/dict-de-de": "^4.0.0",
		"@mheob/commitlint-config": "^1.1.2",
		"@mheob/eslint-config": "^6.1.3",
		"@mheob/prettier-config": "^3.3.1",
		"@mheob/tsconfig": "^2.2.1",
		"commitizen": "^4.3.0",
		"cspell": "^8.14.4",
		"cz-git": "^1.9.4",
		"eslint": "^9.10.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.6",
		"turbo": "^2.1.2",
		"typescript": "^5.6.2"
	},
	"packageManager": "pnpm@9.10.0+sha512.73a29afa36a0d092ece5271de5177ecbf8318d454ecd701343131b8ebc0c1a91c487da46ab77c8e596d6acf1461e3594ced4becedf8921b074fbd8653ed7051c",
	"engines": {
		"node": "^20.0.0"
	}
}

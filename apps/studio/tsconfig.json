{
	"compilerOptions": {
		"incremental": true,
		"target": "ES2017",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"jsx": "preserve",
		"moduleDetection": "force",
		"module": "Preserve",
		"paths": {
			"@/*": ["./*"]
		},
		"allowJs": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}

{
	"compilerOptions": {
		"incremental": true,
		"target": "ES2017",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"paths": { "@/*": ["./src/*"] },
		"resolveJsonModule": true,
		"allowJs": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"plugins": [{ "name": "next" }],
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
	],
	"exclude": ["node_modules"],
}

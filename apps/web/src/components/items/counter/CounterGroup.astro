---
import type { ComponentProps } from 'astro/types';

import CounterItem from './CounterItem.astro';

interface Props {
	values: ComponentProps<typeof CounterItem>[];
}

const { values } = Astro.props;
---

<div
	class:list={[
		{ 'grid-cols-3': values?.length === 3 },
		{ 'grid-cols-4': values?.length === 4 },
		'container mx-auto grid grid-rows-1 divide-x-2 px-5 py-32',
	]}
>
	{values?.length ? values.map(value => <CounterItem {...value} />) : 'No values'}
</div>

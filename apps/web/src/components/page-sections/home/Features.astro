---
import { FeatureCard } from '@/components/cards';
import SectionHeader from '@/components/items/SectionHeader.astro';
import { getFeatureSection } from '@/lib/sanity/queries/pages/home';

const { features, intro, subtitle, title } = await getFeatureSection();
---

<section class="bg-gray-lightest">
	<div class="container mx-auto px-5 py-28">
		<SectionHeader subTitle={subtitle} title={title} isCentered>{intro}</SectionHeader>

		<div class="mt-16 grid grid-cols-2 place-content-center gap-12">
			{features.map(props => <FeatureCard {...props} />)}
		</div>
	</div>
</section>

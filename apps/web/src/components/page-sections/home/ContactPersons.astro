---
import { ContactPersonGroup, SectionHeader } from '@/components/items/';
import { getContactPersonsSection } from '@/lib/sanity/queries/pages/home';

const { contactPersons, intro, subtitle, title } = await getContactPersonsSection();
---

<section class="bg-brand relative z-0 text-white">
	<div class="container mx-auto px-5 pb-40 pt-28">
		<SectionHeader descriptionClass="text-white" subTitle={subtitle} title={title} isCentered>
			{intro}
		</SectionHeader>

		<div class="mt-32 flex justify-center gap-12">
			<ContactPersonGroup contactPersons={contactPersons} />
		</div>
	</div>
</section>

<style>
	section {
		&::before {
			content: '';
			position: absolute;
			inset: 0;
			background-image: url('../../../icons/design/bg-silhouette-dehnen.svg'),
				url('../../../icons/design/bg-silhouette-fussball-dribbeln.svg');
			background-position:
				0% 10%,
				115% 105%;
			background-repeat: no-repeat;
			background-size: 400px, 500px;
			opacity: 0.15;
			z-index: -1;
		}
	}
</style>

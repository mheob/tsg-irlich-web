---
import {
	ContactForm,
	ContactPersons,
	Counter,
	Features,
	Groups,
	Hero,
	News,
	Newsletter,
	PriceTable,
	Testimonials,
	Vision,
} from '@/components/page-sections/home';
import { BaseLayout } from '@/layouts';
import { getMetaInformation } from '@/lib/sanity/queries/common';

const { intro, metaDescription, metaTitle, title } = await getMetaInformation('home');
---

<BaseLayout description={metaDescription || intro} title={metaTitle || title}>
	<Hero />
	<Features />
	<Vision />
	<Groups />
	<Counter />
	<PriceTable />
	<Testimonials />
	<ContactPersons />
	<ContactForm />
	<News />
	<Newsletter />
</BaseLayout>
